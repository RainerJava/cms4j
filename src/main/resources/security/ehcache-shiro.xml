<?xml version="1.0" encoding="UTF-8"?>
<ehcache updateCheck="false">

	<diskStore path="java.io.tmpdir/CMS4j" />

	<!-- DefaultCache setting. -->
	<defaultCache maxEntriesLocalHeap="1000" eternal="false" timeToIdleSeconds="300" timeToLiveSeconds="600"
		overflowToDisk="false" />

	<!-- Special objects setting. -->
	<cache name="cn.edu.sdufe.cms.security.ShiroDbRealm.authorizationCache" maxEntriesLocalHeap="1000"
		eternal="true" overflowToDisk="true" maxEntriesLocalDisk="10000">
		<cacheEventListenerFactory class="net.sf.ehcache.distribution.RMICacheReplicatorFactory"
			properties="replicatePuts=false,replicateUpdatesViaCopy=false" />
	</cache>
	<cache name="cn.edu.sdufe.cms.security.ShiroDbRealm.authenticationCache" maxEntriesLocalHeap="1000"
		eternal="true" overflowToDisk="true" maxEntriesLocalDisk="10000">
		<cacheEventListenerFactory class="net.sf.ehcache.distribution.RMICacheReplicatorFactory"
			properties="replicatePuts=false,replicateUpdatesViaCopy=false" />
	</cache>
</ehcache>