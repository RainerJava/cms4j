<?xml version="1.0" encoding="UTF-8"?>
<ehcache updateCheck="false"><!-- 不检查缓存更新 -->

    <diskStore path="java.io.tmpdir/CMS4j" />

	<!-- DefaultCache setting. -->
	<defaultCache maxEntriesLocalHeap="10000" eternal="false" timeToIdleSeconds="300" timeToLiveSeconds="600"
		overflowToDisk="true" maxEntriesLocalDisk="100000" />

    <cache name="userCache" maxEntriesLocalHeap="200" eternal="false" overflowToDisk="false" />
    <cache name="groupCache" maxEntriesLocalHeap="200" eternal="false" overflowToDisk="false" />
    <cache name="articleCache" maxEntriesLocalHeap="1000" eternal="false" overflowToDisk="false" />
    <cache name="articleCache" maxEntriesLocalHeap="10000" eternal="false" overflowToDisk="false" />
    <cache name="archiveCache" maxEntriesLocalHeap="200" eternal="false" overflowToDisk="false" />
    <cache name="categoryCache" maxEntriesLocalHeap="200" eternal="false" overflowToDisk="false" />
    <cache name="imageCache" maxEntriesLocalHeap="1000" eternal="false" overflowToDisk="false" />
    <cache name="linkCache" maxEntriesLocalHeap="200" eternal="false" overflowToDisk="false" />

	<!-- Special objects setting. -->
	<!-- Refresh contentInfoCache every hour，按Cache实际大小而不是Element数量进行限制，超过限制后不保存到磁盘。 -->
	<cache name="contentInfoCache" maxBytesLocalHeap="10M" eternal="false" timeToIdleSeconds="3600"
		timeToLiveSeconds="3600" overflowToDisk="false" />
</ehcache>
