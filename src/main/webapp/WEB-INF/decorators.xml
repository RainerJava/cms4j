<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/layouts/">
    <excludes>
        <pattern>/static/*</pattern>
        <pattern>/jsp/*</pattern>
        <pattern>/rs/*</pattern>
        <pattern>/login*</pattern>
        <pattern>/**/*.html</pattern>
        <pattern>/error/*</pattern>
        <pattern>/**/ajax/*</pattern>
        <pattern>/comment/create</pattern>
    </excludes>

    <decorator name="default" page="default.jsp">
        <pattern>/*</pattern>
        <pattern>/index</pattern>
        <pattern>/gallery/album*</pattern>
        <pattern>/gallery/photo*</pattern>
        <pattern>/agency/show/*</pattern>
    </decorator>

    <decorator name="article" page="article.jsp">
        <pattern>/article/list/*</pattern>
        <pattern>/article/content/*</pattern>
        <pattern>/article/digest/*</pattern>
        <pattern>/article/listInfo</pattern>
        <pattern>/archive/list*</pattern>
        <pattern>/article/content*</pattern>
        <pattern>/teacher/content/*</pattern>
    </decorator>

    <decorator name="dashboard" page="admin.jsp">
        <pattern>/dashboard*</pattern>
        <pattern>/article*</pattern>
        <pattern>/comment*</pattern>
        <pattern>/category*</pattern>
        <pattern>/attachment*</pattern>
        <pattern>/account*</pattern>
        <pattern>/gallery*</pattern>
        <pattern>/link*</pattern>
        <pattern>/teacher*</pattern>
        <pattern>/agency*</pattern>
    </decorator>
</decorators>